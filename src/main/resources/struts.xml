<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="false"/>
    <constant name="struts.custom.i18n.resources" value="messages"/>
    <constant name="struts.enable.SlashesInActionNames" value="true"/>

    <!-- Action mappings are defined here -->
    <package name="default" namespace="" extends="struts-default">

        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>
        <interceptors>
            <interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"/>
        </interceptors>

        <action name="*" class="editUserAction" method="index">
            <result>view/editUserList.jsp</result>
        </action>

        <action name="list" class="editUserAction" method="listUsers">
            <result type="json">
                <param name="root">jsonRoot</param>
            </result>
        </action>

        <action name="edit/roles" class="editUserAction" method="editRolesOfUser">
            <result type="json">
                <param name="root">jsonAllRoles</param>
            </result>
        </action>
        <action name="get" class="editUserAction" method="getRolesOfUser">
            <result type="json">
                <param name="root">jsonUserRoles</param>
            </result>
        </action>
        <action name="edit/user" class="editUserAction" method="editUser">
            <result name="input" type="json"/>
            <result name="success" type="json"/>
        </action>

        <action name="delete" class="deleteAction" method="deleteUser">
            <result type="json"/>
        </action>

        <action name="register" class="addAction" method="index">
            <result>view/addNewUser.jsp</result>
        </action>

        <action name="add" class="addAction" method="addUser">
            <result name="input" type="json"/>
            <result name="success" type="json"/>
        </action>

        <action name="job" class="jobAction" method="showJobs">
            <result name="input" type="json"/>
            <result type="json">
                <param name="root">jsonJob</param>
            </result>
        </action>



    </package>


</struts>