<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="false"/>
    <constant name="struts.custom.i18n.resources" value="messages"/>
    <constant name="struts.enable.SlashesInActionNames" value="true"/>

    <!-- Action mappings are defined here -->
    <package name="default" namespace="" extends="struts-default">
        <action name="list" class="editUserAction" method="listUsers">
            <result>/view/editUserList.jsp</result>
        </action>
        <action name="add" class="editUserAction" method="addUser">
            <result type="redirect">/list</result>
            <result name="input">/view/editUserList.jsp</result>
        </action>
        <action name="delete/*" class="editUserAction" method="deleteUser">
            <param name="user.id">{1}</param>
            <result type="redirect">/list</result>
        </action>
        <action name="*" class="editUserAction" method="listUsers">
            <result>/view/editUserList.jsp</result>
        </action>
    </package>

</struts>